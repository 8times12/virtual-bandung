    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "runtimeArgs": ["--disable-web-security"]
        },
        {
            "name": "Launch Firefox against localhost",
            "type": "firefox",
            "request": "launch",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "name": "Launch Microsoft Edge (Chromium) Canary against localhost",
            "type": "edge",
            "version": "canary",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "runtimeArgs": ["--disable-web-security"]
        }
    ]
}